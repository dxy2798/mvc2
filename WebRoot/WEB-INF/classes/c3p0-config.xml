<c3p0-config>
 
  
  <!--       -->
   <named-config name="mvcapp"> 
  <!-- 指定连接数据源的基本属性  -->  
  	<property name="driverClass">com.mysql.jdbc.Driver</property>
  	<property name="jdbcUrl">jdbc:mysql://192.168.3.26:3306/ajax?useUnicode=true&amp;characterEncoding=UTF-8</property>
  	<property name="user">root</property>
  	<property name="password">32147</property>
  	
  <!-- 若数据库中连接数不足时，一次想数据库服务器申请多少个连接 -->
    <property name="acquireIncrement">5</property>
    
    <!-- 初始化数据库连接池时连接的数量  -->
    <property name="initialPoolSize">10</property>
    
    <!-- 数据库连接池中的最小的数据库连接数 -->
    <property name="minPoolSize">10</property>
    
    <!-- 数据库连接池中的最大的数据库连接数 -->
    <property name="maxPoolSize">50</property>
    
	<!-- C3P0 数据库连接池可以维护的 Statement 的个数 -->
    <property name="maxStatements">20</property>
     
    <!-- 每个连接同时可以使用的 Statement 对象的个数 -->
    <property name="maxStatementsPerConnection">5</property>
      
   <!-- 最大闲置时间 -->
    <property name="maxIdleTime">28000</property>   
   <!-- 闲置连接测试周期 -->
   <property name="idleConnectionTestPeriod">28000</property>
  </named-config>
  
</c3p0-config>